{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6", "es7", "es2019", "DOM", "es2021"],
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "utils/**/*",
    "types.ts",
    "config.ts",
    "app.ts",
    "index.ts"
  ],
  "exclude": ["node_modules", "scripts", "dist", "public"],
  "ts-node": {
    "swc": true
  }
}
